<resources>

	<style name="AppTheme" parent="BaseAppTheme">
		<item name="android:navigationBarColor">@android:color/black</item>
		<item name="windowActionBar">true</item>
		<item name="android:windowContentTransitions">true</item>
		<item name="android:statusBarColor">@color/primaryDark</item>

		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowLightStatusBar">false</item>
	</style>
	<!-- Application Themes -->
	<style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="toolbarForeground">@color/white</item>
		<item name="toolbarBackground">@color/primary</item>
	</style>

	<!-- Toolbar Themes -->
	<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">?toolbarForeground</item>
	</style>

	<style name="ToolBarStyle" parent="">
		<item name="android:theme">@style/Toolbar</item>
		<item name="android:background">?toolbarBackground</item>
	</style>

	<style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
		<item name="android:textColorPrimary">?toolbarForeground</item><!-- Changed -->
		<item name="android:textColorSecondary">?toolbarForeground</item><!-- Changed -->
		<item name="titleTextAppearance">@style/Toolbar_Title</item>
	</style>

	<style name="Toolbar_Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="FormButton" parent="Theme.MaterialComponents">
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
